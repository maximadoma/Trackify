<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TrackifyStudentViolationTracker" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->

    </style>

    <style name="Theme.TrackifyStudentViolationTracker" parent="Base.Theme.TrackifyStudentViolationTracker">
        <item name="colorPrimaryDark">@color/maroon_primary</item>
        <item name="colorPrimary">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="colorAccent">@color/text_color</item>
        <item name="android:colorAccent">@color/maroon_btn</item>
        <item name="drawerArrowStyle">@style/DrawerIcon</item>
    </style>

    <style name="CustomAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">#FFFFFF</item> <!-- Set the background color to white -->
        <item name="android:textColorPrimary">#000000</item>
    </style>


    <style name="AppTheme.Toolbar" parent="Widget.AppCompat.SearchView">
        <!--This line changes the color of text in Toolbar-->
        <item name="android:textColorPrimary">@color/black</item>
        <!--This line changes the color of icons in toolbar (back, overflow menu icons)-->
        <item name="android:textColorSecondary">#616161</item>
        <item name="android:textColorHint">#616161</item>
        <item name="popupTheme">@style/CustomPopupTheme</item>
    </style>

    <style name="CustomPopupTheme" parent="ThemeOverlay.AppCompat.Light">
        <!-- Customize the background color of the popup menu -->
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="DrawerIcon" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">#292929</item>
    </style>

    <style name="NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.TrackifyStudentViolationTracker.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TrackifyStudentViolationTracker.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TrackifyStudentViolationTracker.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>